bot = telebot.TeleBot(token)
@bot.message_handler(commands=['help']) # —Ñ—É–Ω–∫—Ü–∏—è, –∫–æ—Ç–æ—Ä–∞—è –æ–±—Ä–∞–±–∞—Ç—ã–≤–∞–µ—Ç –∫–æ–º–∞–Ω–¥—É help
def send_welcome(message):
  bot.reply_to(message, """\
 "–≠—Ö–æ–±–æ—Ç" —Å–æ–∑–¥–∞–Ω –ò–≥–æ—Ä–µ–º –ú. 22.01.2024–≥. 
–î–ª—è –ø–µ—Ä–µ–∑–∞–ø—É—Å–∫–∞ –Ω–∞–∂–º–∏—Ç–µ start\
""")


@bot.message_handler(commands=['start'])
# —Ñ—É–Ω–∫—Ü–∏—è, –∫–æ—Ç–æ—Ä–∞—è –æ–±—Ä–∞–±–∞—Ç—ã–≤–∞–µ—Ç –∫–æ–º–∞–Ω–¥—É start
def send_welcome(message):
  bot.reply_to(message, """\
–ü—Ä–∏–≤–µ—Ç, –Ø –≠—Ö–æ–±–æ—Ç.
–Ø –∑–¥–µ—Å—å –¥–ª—è —Ç–æ–≥–æ, —á—Ç–æ–±—ã –ø–æ–≤—Ç–æ—Ä–∏—Ç—å –≤–∞–º –≤–∞—à–∏ —Å–ª–æ–≤–∞ –≤ –æ—Ç–≤–µ—Ç. –ü—Ä–æ—Å—Ç–æ —Å–∫–∞–∂–∏—Ç–µ —á—Ç–æ-–Ω–∏–±—É–¥—å, –∏ —è —Å–∫–∞–∂—É —Ç–æ –∂–µ —Å–∞–º–æ–µ!\
""")

@bot.message_handler(content_types=["text"]) #–°–ø–µ—Ü–∏–∞–ª—å–Ω—ã–π —Å–∏–Ω—Ç–∞–∫—Å–∏—Å(–î–µ–∫–æ—Ä–∞—Ç–æ—Ä) –∫–æ—Ç–æ—Ä—ã–π —É–∫–∞–∑—ã–≤–∞–µ—Ç, –∫–∞–∫–∏–µ –∏–º–µ–Ω–Ω–æ —Å–æ–æ–±—â–µ–Ω–∏—è –±—É–¥–µ—Ç –æ–±—Ä–∞–±–∞—Ç—ã–≤–∞—Ç—å –æ–ø—Ä–µ–¥–µ–ª—è–µ–º–∞—è –¥–∞–ª—å—à–µ —Ñ—É–Ω–∫—Ü–∏—è.
# –≠—Ç–æ—Ç —Å–∏–Ω—Ç–∞–∫—Å–∏—Å –ø–æ–∑–≤–æ–ª—è–µ—Ç –Ω–∞–º –∑–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞—Ç—å —Ñ—É–Ω–∫—Ü–∏—é –≤ –∫–∞—á–µ—Å—Ç–≤–µ –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–∞ –¥–ª—è —Å–æ–æ–±—â–µ–Ω–∏–π —Ç–∏–ø–∞ —Ç–µ–∫—Å—Ç–∞, —Ç–µ –ª—é–±–æ–π —Ç–µ–∫—Å—Ç –±—É–¥–µ—Ç –æ–±—Ä–∞–±–∞—Ç—ã–≤–∞—Ç—å—Å—è —Å –ø–æ–º–æ—â—å—é —Ñ—É–Ω–∫—Ü–∏–∏ –Ω–∏–∂–µ
# –û–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ —Ñ—É–Ω–∫—Ü–∏–∏ echo, –ø—Ä–∏–Ω–∏–º–∞—é—â–µ–π –æ–¥–∏–Ω –ø–∞—Ä–∞–º–µ—Ç—Ä - —Å–æ–æ–±—â–µ–Ω–∏–µ (–Ω–∞ –∫–æ—Ç–æ—Ä–æ–µ –º—ã –∏ –±—É–¥–µ–º –æ—Ç–≤–µ—á–∞—Ç—å):
def echo(message):
    bot.reply_to(message, f' –Ø "–≠—Ö–æ-–±–æ—Ç", –ø–æ—ç—Ç–æ–º—É —è –ø—Ä–æ—Å—Ç–æ –ø–æ–≤—Ç–æ—Ä—è—é —Ç–≤–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ üòâ:\n{message.text}')

bot.polling(none_stop=True) # none_stop=True - —Ñ—É–Ω–∫—Ü–∏—è –≤—ã–∑—ã–≤–∞–µ—Ç—Å—è –ø–æ—Å—Ç–æ—è–Ω–Ω–æ polling - –Ω–∞—á–∏–Ω–∞–µ—Ç –æ—Ç–ø—Ä–∞–≤–∫—É –∑–∞–ø—Ä–æ—Å–æ–≤ –∫ —Å–µ—Ä–≤–µ—Ä–∞–º —Ç–µ–ª–µ–≥—Ä–∞–º–º, –∏—Å–ø–æ–ª—å–∑—É—è –Ω–∞—à —Ç–æ–∫–µ–Ω
